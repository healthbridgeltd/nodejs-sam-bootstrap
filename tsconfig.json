{
  "compilerOptions": {
    // ECMAScript version supported by Node v16
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "target": "ES2021",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": { 
      "@/*": ["*"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
  ]
}
