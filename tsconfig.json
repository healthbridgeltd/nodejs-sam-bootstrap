{
  "compilerOptions": {
    // ECMAScript version supported by Node v12 
    "lib": [
      "ES2019"
    ],
    "module": "commonjs",
    "target": "ES2019",
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": { 
      "@/*": ["*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
  ]
}
